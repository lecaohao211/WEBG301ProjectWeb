{% extends 'base.html.twig' %}

{% block title %}Food{% endblock %}

{% block body %}
    <style>
        body{
            background-color: #DBF9FC;

        }
    </style>
    <h1>Food Detail</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ food.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ food.name }}</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>{{ food.category ? food.category.name : '' }}</td>
        </tr>
        <tr>
            <th>Chef</th>
            <td>{{ food.chefID ? food.chefID.name : '' }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ food.price }}$</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-link" href="{{ path('app_food_index') }}">Back To List</a>

    <a class="btn btn-warning" href="{{ path('app_food_edit', {'id': food.id}) }}">Edit</a>

{#     {{ include('food/delete.html.twig') }}#}
{% endblock %}
