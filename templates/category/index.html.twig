{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Category</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <th scope="row">{{ category.id }}</th>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('app_category_show', {'id': category.id}) }} " class='btn btn-success'>View</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class='btn btn-default'>Edit</a>
                        <a href="{{ path('category_delete', {'id': category.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>


        </table>
        <a style="margin: 10px 0 12px 5px" href="{{ path('app_category_new') }}">
            <button type="button" class="btn btn-success">Add Category</button>
        </a>
        <a style="margin: 10px 0 12px 5px" href="{{ path('app_home') }}">
            <button type="button" class="btn btn-dark">Go home</button>
        </a>

    </div>
{% endblock %}